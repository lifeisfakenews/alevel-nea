---

export type Props = {
    title: string;
}

const { title } = Astro.props;

---

<div class="card">
    <div class="header | flex v-center">
        <h2 class="h2">{title}</h2>
        <div class="push-right">
            <slot name="create-button" />
        </div>
    </div>

    <div>
        <slot />
    </div>
</div>

<style>
    .card {
        background: var(--nea-clr-dark-700);
        border: 1px solid var(--nea-clr-dark-800);
        border-radius: .8rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        margin-bottom: 2rem;
        padding: 3rem;
    }

    .header {
        margin-bottom: 1rem;
    }

    h2 {
        margin-block: 0;
    }

</style>